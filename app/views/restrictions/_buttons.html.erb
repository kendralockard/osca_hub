<% if DietaryRestriction.where(user_id: current_user.id).any? %>
  <%= link_to "delete my restrictions",
                        DietaryRestriction.where(user_id: current_user.id).first,
                        class: "delete-restrictions",
                        method: :delete,
                        data: { confirm: "Delete restrictions?" } %>
<% else %>
  <input type=button
         id="add-restrictions-btn"
         class="add-restrictions"
         value="+ add your dietary restrictions"/><img>
<% end %>
