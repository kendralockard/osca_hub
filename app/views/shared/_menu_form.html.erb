<%= form_for(@menu) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :starch %>
    <%= f.text_field :starch, class: 'form-control' %>

    <%= f.label :protein %>
    <%= f.text_field :protein, class: 'form-control' %>

    <%= f.label :vegetable %>
    <%= f.text_field :vegetable, class: 'form-control' %>

    <%= f.label :restrictions %>
    <%= f.text_field :restrictions, class: 'form-control' %>

    <%= f.label :notes %>
    <%= f.text_field :notes, class: 'form-control' %>

    <%= f.submit "Post Menu", class: "btn btn-primary" %>
  </div>
<% end %>
