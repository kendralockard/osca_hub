<input type="button"
         class="post__comment"
         id="post__comment-<%= announcement.id %>"
         value="comment"
         onclick="postComment(<%= announcement.id %>)">

<input type="button"
    class="post__comment"
    style="display: none;"
    id="cancel__comment-<%= announcement.id %>"
    value="cancel"
    onclick="cancelComment(<%= announcement.id %>)">
