<% provide(:title, "Settings") %>
<h1>User Settings</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <div style="display: flex;">
      <%= f.label :password, "Password", style: "margin-right: 23.3rem" %>
      <%= f.label :password_confirmation, "Confirmation" %>
      </div>

      <div style="display: flex">
      <%= f.password_field :password, class: 'form-control', placeholder: "••••••••••••", style: "width: 48%; margin-right: 30px" %>

      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "••••••••••••", style: "width: 48%" %>
      </div>

      <%= f.label :bio %>
      <%= f.text_area :bio, class: 'form-control' %>

      <%= f.label "Profile photo" %>
      <div class="avatar_edit">
        <%= avatar_for @user %>
        <%= f.file_field :avatar %>
      </div><br>

      <%= f.label :theme %><br>
      <div class="radio-inline">
        <%= f.radio_button :theme, 'light-mode' %>
        <%= f.label :theme, "Light mode" %><br>

        <%= f.radio_button :theme, 'dark-mode' %>
        <%= f.label :theme, "Dark mode" %><br>

        <%= f.radio_button :theme, 'pink-blue-mode' %>
        <%= f.label :theme, "Pink & blue" %>
      </div><br>

      <%= f.submit "Save changes", class: "btn btn-primary", style: "margin-top: 2rem;" %>
    <% end %>

    <br><br>

    <%= render 'switch_coop_button' %>

  </div>
</div>
