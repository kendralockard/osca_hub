<% if logged_in? %>
  <script type="text/javascript" src="app/assets/javascripts/popovers.js">
  </script>

  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>

        <% if @user.coop_id.nil? %>
          <% if current_user == @user %>
            <%= render 'join_coop_button' %>
          <% end %>
        <% end %>

      </section>
    </aside>

    <div class="col-md-8">
      <% if @user == current_user && !@user.coop_id.nil? %>
        <%= render 'recent_news' %>
      <% end %>
    </div>
  </div>
<% else %>
  <% controller.redirect_to root_url %>
<% end %>
