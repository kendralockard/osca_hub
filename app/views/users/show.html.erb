<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "Join a Coop", join_coop_path %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.announcements.any? %>
      <h3>Announcements (<%= @user.announcements.count %>)</h3>
      <ol class="announcements">
        <%= render @announcements %>
      </ol>
      <%= will_paginate @announcements %>
    <% end %>
  </div>
</div>
