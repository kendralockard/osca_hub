<% coops = ["", "Brown Bag", "Fairkid", "Harkness", "Keep", "Pyle", "Tank", "TWC"] %>
<% coopID = current_user.coop_id || 0 %>

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= link_to "OSCA Hub", root_path, id: "logo" %>
    <nav>

      <ul class="nav navbar-nav navbar-center">
      <li id="coop"><%= coops[coopID] %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Menus", menus_path %></li>
          <li><%= link_to "Save Plates", saveplates_path %></li>
          <li><%= link_to "Workchart", workchart_path %></li>
          <li><%= link_to "Sub Requests", subrequests_path %></li>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "My profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Users", users_path %></li>
              <li class="divider"></li>
                <li><%= link_to "Help", help_path %></li>
                <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Help", help_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
