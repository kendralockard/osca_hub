<div id="subreqFormModal" class="modal fade">
    <div class="modal-dialog" style="position: absolute;
      left: 50%; top: 25%; transform: translate(-50%, -20%);">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                  <span aria-hidden="true">Ã—</span>
                  <span class="sr-only">close</span>
                </button>
                <h3 id="subreqFormTitle" class="modal-title" style="text-align: center"></h3>
            </div>
            <div id="subreqFormPage" class="modal-body">
            <%= form_for(@event) do |f| %>
              <div class="field">
                <%= f.label :date, "*Date" %>
                <%= f.date_field :date, class: 'form-control', :required => true %>

                <%= f.label :shift, "*Shift" %>
                <%= f.text_field :shift, placeholder: "1st hour lunch", class: 'form-control', :required => true %>

                <%= f.label :message %>
                <%= f.text_area :message, class: 'form-control' %>

                <%= f.submit "Request", class: "btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
