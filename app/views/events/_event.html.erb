<hr style="margin: 10px 0;">
<li class="events">
  <%= link_to gravatar_for(event.user, size: 50), event.user %>
  <span class="title">*Sub Needed*</span> for
    <span class="user"><%= link_to event.user.name, event.user,
      style: "color: #444444; font-decoration: light;" %></span>
  <br>
  <span class="content">
  <%= event.date.strftime("%A %b %_d") %>, <%= event.shift %>
  </span>
  <br>
  <span class="timestamp">
    posted <%= time_ago_in_words(event.created_at) %> ago
    <% if current_user?(event.user) %>
      | <%= link_to "push", event, method: :push_event, style: "color: var(--email-purple);",
                                data: { confirm: "Email this sub request to " \
                                        +Coop.coops[current_user.coop_id]+"?" } %>
    <% else %>
      | <span class="cover"><%= mail_to event.user.email, "cover shift",
        subject: "Re: Sub Request for "+event.date.strftime("%b %_d"), style: "color: var(--email-purple)" %>
    <% end %>
  </span>
</li>
