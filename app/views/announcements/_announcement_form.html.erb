<%= form_for(@announcement) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render 'announcements/markdown' %>

  <input type=button
         class="paperclip"
         onclick="show_attachment_upload()" />

  <%= f.file_field :attachment %>

  <%= md_simple_editor('btn-xs') do %>
    <%= f.text_area :content,
                    class: "announcement-form",
                    placeholder: "Compose new announcement...",
                    required: false %>
  <% end %>

  <%= f.submit "Post Announcement", class: "btn btn-primary" %>
<% end %>
