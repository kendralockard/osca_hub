<li id="announcement-<%= announcement.id %>">
  <%= link_to gravatar_for(announcement.user, size: 50), announcement.user %>
  <span class="user"><%= link_to announcement.user.name, announcement.user %></span>
  <span class="content"><%= announcement.content %></span>
  <span class="timestamp">
    posted <%= time_ago_in_words(announcement.created_at) %> ago
    <% if current_user?(announcement.user) %>
      | <%= link_to "delete", announcement, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>
